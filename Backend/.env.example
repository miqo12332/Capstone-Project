# Claude AI configuration (backend only)
CLAUDE_API_KEY=your_key
CLAUDE_MODEL=claude-3-5-sonnet-latest
CLAUDE_BASE_URL=https://api.anthropic.com
CLAUDE_PROVIDER_NAME=Anthropic Claude
ASSISTANT_HISTORY_LIMIT=12

# Email SMTP settings (required for registration verification)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
# Optional: set to "true" to force TLS even on non-465 ports
SMTP_SECURE=false
# Optional: custom from address (defaults to SMTP_USER)
MAIL_FROM="StepHabit <no-reply@yourdomain.com>"
